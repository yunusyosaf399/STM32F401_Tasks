#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
// LM75 I2C address (check your sensor datasheet; the default is usually 0x48)
#define LM75_ADDR 0x90  // Address is 0x48 shifted left by 1 (I2C address: 0x48 << 1)

// LM75 Register addresses
#define LM75_TEMP_REG 0x00  // Temperature register
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* USER CODE END PD */

